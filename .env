# Application Environment
ENV=development
DEBUG=true

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_LOG_CHANNEL_ID=your_log_channel_id
TELEGRAM_ADMIN_IDS=123456,789012

# Instagram Credentials
INSTAGRAM_USERNAME=your_instagram_username
INSTAGRAM_PASSWORD=your_instagram_password

# Database Configuration
DATABASE_URL=sqlite:///instagram_bot.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Security Configuration
SECRET_KEY=your_generated_secret_key
ENCRYPTION_SALT=your_encryption_salt

# JWT Configuration
JWT_EXPIRATION_MINUTES=60

# Rate Limiting
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BLOCK_DURATION=300

# Logging
LOG_LEVEL=INFO

# Feature Flags
FEATURE_PROFILE_DOWNLOAD=true
FEATURE_POST_DOWNLOAD=true
FEATURE_STORY_DOWNLOAD=false
FEATURE_REEL_DOWNLOAD=true

# Download Configuration
MAX_DOWNLOAD_SIZE=52428800  # 50 MB
ALLOWED_MEDIA_TYPES=jpg,png,mp4
